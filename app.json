{
  "expo": {
    "name": "Rakat Counter",
    "slug": "rakat-counter-native",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0A0A0A"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.fahdi.rakatcounter",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "This app needs access to your microphone to detect the sound of your head touching the prayer mat for automatic Rakat counting."
      }
    },
    "android": {
      "package": "com.fahdi.rakatcounter",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon.png",
        "backgroundColor": "#0A0A0A"
      },
      "permissions": [
        "RECORD_AUDIO"
      ],
      "edgeToEdgeEnabled": true
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}